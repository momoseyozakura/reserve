<div class = room-container>
    <h2>予約済みルーム一覧</h2>
    
    <table >
       <thead>
       <tr>
            <th>ルーム画像</th>
            <th>ルーム名</th>
            <th>ルーム紹介</th>
            <th>合計料金</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>予約確定日時</th>
        </tr>
       <thead>
       <% @rooms.each do |room| %>
        <tbody>
            <tr>
                <td><%= image_tag room.image.to_s ,size: "240x140"%></td>
                <td><a href = <%= "/rooms/#{room.id}/edit"%>><%= room.name %></a></td>
                <td><%= room.memo%></td>
                <td>¥<%= room.sum_price.to_i %></td>
                <td><%= room.start_date%></td>
                <td><%= room.end_date%></td>
                <td><%= room.updated_at.to_s(:datetime_jp) %></td>
            </tr>
        </tbody>
        <%end%>
    </table>
</div>